<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">
    <RelativeLayout
        android:layout_margin="@dimen/activity_margin_size"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ListView
        android:layout_weight="9"
        android:background="@drawable/listview_divider"
        android:divider="@color/black"
        android:dividerHeight="2px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView">
    </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/rely_dialog_container"
        android:layout_width="350dp"
        android:layout_height="350dp"></RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addCourseFAB"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/activity_vertical_top"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        android:clickable="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />
</RelativeLayout>