<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment"

    tools:context="com.example.umyhpuscdi.danceapp15.CreateEditCourse"
    android:background="@color/lite_rose">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scroll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLay"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="22sp"
                android:id="@+id/textView_info"
                android:text="Redigera kursens information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Kurstitel: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="20sp"
                    android:id="@+id/title"
                    android:layout_marginLeft="53dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ange kursnamn" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Startdatum: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="36dp"
                    android:background="@color/transparent"
                    android:id="@+id/dateTimeButton"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="VÄLJ" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Antal tillfällen: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <EditText
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:hint="Ange antal tillfällen"
                android:id="@+id/numberOfCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                </LinearLayout>

        !-- Kommentar --!

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Tid (min): "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="48dp"
                    android:id="@+id/durationOfOneCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Längd per kurstillfälle" />

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Kursens pris: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:id="@+id/priceOfCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ange pris (kr)" />

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="Kursens plats: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ange plats" />

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="top"
                    android:textSize="18sp"
                    android:text="Lärare: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:id="@+id/checkboxes"
                    android:layout_marginLeft="68dp"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/ceciliaCitron"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Cecilia Citron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <CheckBox
                        android:id="@+id/annaAndersson"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Anna Andersson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <CheckBox
                        android:id="@+id/beaBearnaisesås"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Bea Bearnaisesås"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <CheckBox
                        android:id="@+id/fiaDubbelsnurr"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Fia Dubbelsnurr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="Status: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <Spinner
                    android:layout_marginLeft="60dp"
                    android:id="@+id/statusSpinner"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="Nivå: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_marginLeft="75dp"
                    android:id="@+id/levelSpinner"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="Dansstil: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_marginLeft="45dp"
                    android:id="@+id/danceStyleSpinner"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                </LinearLayout>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="Beskrivning: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description..." />



        </LinearLayout>





    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_below="@id/linLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        >

        <Button
            android:text="done"
            android:layout_margin="15dp"
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="15dp"
            android:text="Close"
            android:layout_toRightOf="@id/buttonDone"
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
