<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_red"
    tools:context="com.example.umyhpuscdi.danceapp15.login_Dialog_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rely_dig_frag"
        android:background="@color/lite_rose"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="250dp">

    <EditText
        android:id="@+id/edittxt_användernamn"
        android:hint="Använder namn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittxt_lösenord"
        android:layout_below="@+id/edittxt_användernamn"
        android:hint="Lösenord"
        android:password="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_loggain"
        android:text="Logga in"
        android:textColor="@color/white"
        android:layout_below="@+id/edittxt_lösenord"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_skapakonto"
            android:text="Skapa konto"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_below="@+id/edittxt_lösenord"
            android:background="@drawable/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>
