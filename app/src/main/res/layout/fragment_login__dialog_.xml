<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.umyhpuscdi.danceapp15.login_Dialog_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rely_dig_frag"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="250dp">

    <EditText
        android:id="@+id/edittxt_användernamn"
        android:hint="Användarnamn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:lines="1"
        android:layout_width="270dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittxt_lösenord"
        android:layout_below="@+id/edittxt_användernamn"
        android:hint="Lösenord"
        android:maxLines="1"
        android:lines="1"
        android:password="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/edittxt_lösenord">

            <Button
                android:id="@+id/btn_loggain"
                android:text="Logga in"
                android:background="@color/primary_color"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_avbryt"
                android:text="Avbryt"
                android:background="@color/primary_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
