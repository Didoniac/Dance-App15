<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment"

    tools:context="com.example.umyhpuscdi.danceapp15.CreateEditCourse"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:background="@drawable/bakgrund_balboa"
                android:id="@+id/courseImageView"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

        <LinearLayout
            android:id="@+id/linLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                >



            !-- Danstitel ska vara i ovanför tabViewen --!
            <TextView
                android:textSize="20sp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="(Danstitel)" />

               <LinearLayout
                    android:background="@color/green"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:textColor="@color/white"
                       android:layout_marginBottom="5dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/level"
                       android:text="Nivå"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:textColor="@color/white"
                       android:layout_marginBottom="5dp"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/danceStyle"
                       android:text="Dansstil"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   !-- Längd på kurstillfällen --!
                   <TextView
                       android:textColor="@color/white"
                       android:layout_marginBottom="5dp"
                       android:layout_marginLeft="10dp"
                       android:text="Längd per tillfälle: 60min"
                       android:id="@+id/durationOfOneCourse"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   !-- Kurspris --!
                   <TextView
                       android:textColor="@color/white"
                       android:layout_marginBottom="10dp"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/priceOfCourse"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Kurspris" />

               </LinearLayout>

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/green"
                    android:layout_margin="10dp"
                    android:id="@+id/status"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    !-- Plats --!
                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plats" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/teacher"
                        android:text="Lärare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Kontakt: 070-456 51 52"
                        android:textColor="@color/white"
                        android:id="@+id/kontakt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            !-- Description --!
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="4dp"
                android:gravity="start"
                android:background="@color/grey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/descriptionDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
